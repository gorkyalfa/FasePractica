<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Fase práctica</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Fase práctica</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <div class="dropdown">
                                <button class="btn btn-default dropdown-toggle" type="button" id="dropdownAcademicoMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Académico
                                </button>
                                <div class="dropdown-menu" aria-labelledby="dropdownAcademicoMenuButton">
                                    <a class="dropdown-item" asp-area="" asp-controller="Proyectos" asp-action="Index">Proyectos</a>
                                    <a class="dropdown-item" asp-area="" asp-controller="Notas" asp-action="Index">Notas</a>
                                    <a class="dropdown-item" asp-area="" asp-controller="Semestres" asp-action="Index">Semestres</a>
                                </div>
                            </div>
                        </li>
                        <li class="nav-item">
                            <div class="dropdown">
                                <button class="btn btn-default dropdown-toggle" type="button" id="dropdownAdministrativoMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Administrativo
                                </button>
                                <div class="dropdown-menu" aria-labelledby="dropdownAdministrativoMenuButton">
                                    <a class="dropdown-item" asp-area="" asp-controller="Estudiantes" asp-action="Index">Estudiantes</a>
                                    <a class="dropdown-item" asp-area="" asp-controller="Tutores" asp-action="Index">Tutores</a>
                                    <a class="dropdown-item" asp-area="" asp-controller="Conversaciones" asp-action="Index">Conversaciones</a>
                                    <a class="dropdown-item" asp-area="" asp-controller="Documentos" asp-action="Index">Documentos</a>
                                </div>
                            </div>
                        </li>
                        <li class="nav-item">
                            <div class="dropdown">
                                <button class="btn btn-default dropdown-toggle" type="button" id="dropdownEmpresarialMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Empresarial
                                </button>
                                <div class="dropdown-menu" aria-labelledby="dropdownEmpresarialMenuButton">
                                    <a class="dropdown-item" asp-area="" asp-controller="Empresas" asp-action="Index">Empresas</a>
                                    <a class="dropdown-item" asp-area="" asp-controller="Contactos" asp-action="Index">Contactos</a>
                                </div>
                            </div>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - Fase práctica - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
