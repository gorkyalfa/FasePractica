@model FasePractica.Data.Models.Carrera

@{
    ViewData["Title"] = "Delete";
}

<h4>Borrar carrera</h4>
<h4>Are you sure you want to delete this?</h4>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Logo)
        </dt>
        <dd class = "col-sm-10">
            <img src="data:image/png;base64,@Model.Logo" alt="Logo de @Model.Nombre" style="width:200px; height:200px;" />
