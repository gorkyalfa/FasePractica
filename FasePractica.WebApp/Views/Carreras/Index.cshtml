@model IEnumerable<FasePractica.Data.Models.Carrera>

@{
    ViewData["Title"] = "Index";
}

<h4>Lista de carreras</h4>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Logo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                <img src="data:image/png;base64,@item.Logo" alt="Logo de @item.Nombre" style="width:200px; height:200px;"/>
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CarreraId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CarreraId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CarreraId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
