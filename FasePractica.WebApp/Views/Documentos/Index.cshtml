@model IEnumerable<FasePractica.WebApp.Models.Documento>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Codigo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirmadoEl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AlmacenadoEn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Codigo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirmadoEl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AlmacenadoEn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DocumentoId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.DocumentoId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.DocumentoId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
