@model IEnumerable<FasePractica.Data.Models.Proyecto>

@{
    ViewData["Title"] = "Index";
}

<h1>LISTA DE PROYECTOS</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Semestre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Empresa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tecnologia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TutorId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactoId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Semestre.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Empresa.Alias)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tecnologia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TutorAcademico.DataValueField)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TutorEmpresarial.DataValueField)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProyectoId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ProyectoId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ProyectoId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<tfoot>
        <nav aria-label="...">
            <ul class="pagination">
                @* <li class="page-item disabled">
                <span class="page-link">Anterior</span>
                </li> *@
                @for (var i = 0; i < (int)ViewData["TotalPaginas"]; i++)
                {
                    if(i+1 == (int)ViewData["PaginaActual"])
                    {
                        <li class="page-item active" aria-current="page">
                            <a class="page-link" asp-action="Index" asp-route-pagina="@(i+1)">@(i+1)</a>
                        </li>
                    }
                    else
                    {
                        <li class="page-item">
                            <a class="page-link" asp-action="Index" asp-route-pagina="@(i+1)">@(i+1)</a>
                        </li>
                    }
                }
                @* <a class="page-link" href="#">Siguiente</a>
                </li> *@
            </ul>
        </nav>
    </tfoot>
